@NAME Fancy shader
@TAG fancy_shader
@GEN_FILE output.frag
@LINE_DIRECTIVE_ON FALSE
@DESC { Fancy fragment shader used to render. Can be used with the python viewer script (in the output dir) to display it. }
@PARAM RENDER_DISTANCE FLOAT GEN_FILE DEFAULT=5000.0
@PARAM_DESC RENDER_DISTANCE { Choose the maximum distance to compute the terrain. Something between 2000.0 and 10000.0. }
@PARAM RAYMARCH_STEP_SIZE FLOAT GEN_FILE DEFAULT=10.0
@PARAM_DESC RAYMARCH_STEP_SIZE { Define the Raymarch step size. Something between 1.0 and 50.0. }
