{
  "name": "instawow-desktop",
  "version": "0.4.0",
  "description": "GUI for the World of Warcraft add-on manager instawow",
  "main": "build",
  "scripts": {
    "build": "rollup -c",
    "start": "concurrently \"rollup -c -w\" \"electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettify": "prettier --write src"
  },
  "author": "layday <layday@protonmail.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/lodash": "^4.14.161",
    "@types/luxon": "^1.24.4",
    "concurrently": "^5.3.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "events": "^3.2.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.2.1",
    "rollup": "^2.27.1",
    "rollup-plugin-svelte": "^6.0.1",
    "sass": "^1.26.10",
    "svelte": "^3.25.1",
    "svelte-check": "^1.0.43",
    "svelte-preprocess": "^4.3.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@open-rpc/client-js": "^1.5.0",
    "electron-context-menu": "^2.3.0",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "semaphore-async-await": "^1.5.1"
  },
  "build": {
    "appId": "org.instawow.instawow-desktop",
    "directories": {
      "buildResources": "./artefacts/"
    },
    "files": [
      "./build/**/*"
    ],
    "linux": {
      "target": "appimage",
      "extraResources": [
        {
          "from": "./artefacts/instawow",
          "to": "./instawow"
        }
      ]
    },
    "mac": {
      "target": "zip",
      "extraFiles": [
        {
          "from": "./artefacts/instawow",
          "to": "./MacOS/instawow"
        }
      ]
    },
    "win": {
      "target": "portable",
      "extraResources": [
        {
          "from": "./artefacts/instawow.exe",
          "to": "./instawow.exe"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 99
  }
}
