      <div class="nav-wrapper" style="height:45px">
        <a href="#!" class="brand-logo-container">
          <object class="brand-logo" type="image/svg+xml" data="{{ resources.include_url("static/osscar_logo.svg") }}"></object>
        </a>
        <ul class="right">
          <li><a href="#"><i class="material-icons" id="kernel-status-icon" style="line-height: 40px;">radio_button_unchecked</i></a></li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<main style="background-color: white">
  <div class="container">
    <div class="row">
      <div class="col s12">
        {%- endblock body_header -%}

        {%- block body_loop -%}
        {% if resources.theme == 'dark' %}
        <div class="jp-Notebook theme-dark">
          {% else %}
          <div class="jp-Notebook theme-light">
            {% endif %}
            {{ super() }}
          </div>
          {%- endblock body_loop -%}

          {%- block body_footer -%}
          <hr style="border-top: 0.5px solid #cccccc;">
